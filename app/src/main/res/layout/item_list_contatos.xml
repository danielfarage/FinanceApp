<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_marginBottom="@dimen/margin15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_contactPhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_margin="@dimen/margin15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin15dp"
        android:text="danielFarage"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/imageView_contactPhoto"
        app:layout_constraintStart_toEndOf="@id/imageView_contactPhoto"
        app:layout_constraintTop_toTopOf="@id/imageView_contactPhoto"
        app:layout_constraintVertical_bias="0.30" />

    <TextView
        android:id="@+id/textView_contactName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Daniel Farage"
        android:textColor="@color/gray_light"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/margin15dp"
        app:layout_constraintTop_toBottomOf="@id/textView_contact"
        app:layout_constraintStart_toEndOf="@id/imageView_contactPhoto"/>

</androidx.constraintlayout.widget.ConstraintLayout>